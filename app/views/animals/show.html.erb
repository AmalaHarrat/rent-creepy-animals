<div class="container">
  <div class="row">
    <div class="col">

      <h1 class="text-center mb-5">Discover your favorite animal</h1>
        <div class="m-6 d-flex" style="height: 400px;">
          <% if @animal.photo.key? %>
          <div class="photos">
            <%= cl_image_tag @animal.photo.key, height: 300, width: 400 %>
          </div>
          <% else%>
           <img src="<%=image_path('unicorn.jpeg')%>" alt="unicorn">
          <% end %>
        </div>
      <div class="d-flex justify-content-between">
        <h2><%= @animal.name %></h2>
        <h2 class="card-animal-pricing"><%= @animal.price %>€</h2>
      </div>
      <p><%= @animal.category %> | fearness level <%= @animal.fear %></p>
    </div>
  </div>
  <p><%= @animal.description %></p>
  <%= link_to "Book now", new_animal_booking_path(@animal), class: "btn btn-ghost" %>
  <br>
  <br>
  <%= link_to " ⏎ Back", animals_path, class: "btn btn-ghost" %>
</div>

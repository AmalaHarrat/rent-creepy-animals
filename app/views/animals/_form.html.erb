<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for(animal) do |f| %>
        <%= f.input :name %>
        <%= f.input :category %>
        <%= f.input :description %>
        <%= f.input :fear %>
        <%= f.input :price %>
        <%= f.submit "Submit", class: "btn btn-ghost"%>
      <% end %>
    </div>
  </div>
</div>
